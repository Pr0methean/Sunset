  <target name="compile.module.sunset.sneakythrow.tests" depends="compile.module.sunset.sneakythrow.production" description="compile module sunset.sneakythrow; test classes" unless="skip.tests"/>
  
  <target name="clean.module.sunset.sneakythrow" description="cleanup module">
    <delete dir="${sunset.sneakythrow.output.dir}"/>
    <delete dir="${sunset.sneakythrow.testoutput.dir}"/>
