  <property name="sunset.sneakythrow.output.dir" value="${module.sunset.sneakythrow.basedir}"/>
  <property name="sunset.sneakythrow.testoutput.dir" value="${module.sunset.sneakythrow.basedir}"/>
  
  <path id="sunset.sneakythrow.module.bootclasspath">
